<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="320dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/preview_record"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="3dp"
                      android:background="@drawable/preview_gradient"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/preview_field_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/name_upper"
                    android:textColor="#E0E0E0"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="5dp"
                      android:background="@drawable/preview_gradient"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/category"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView3"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/preview_field_category"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/category_upper"
                    android:textColor="#E0E0E0"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="5dp"
                      android:background="@drawable/preview_gradient"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/login"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView4"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/preview_field_login"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/login_upper"
                    android:textColor="#E0E0E0"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="5dp"
                      android:background="@drawable/preview_gradient"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/password"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView5"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/preview_field_password"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/password_upper"
                    android:textColor="#E0E0E0"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="5dp"
                      android:background="@drawable/preview_gradient"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/description"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView6"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/preview_field_description"
                    android:text="@string/description_upper"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#E0E0E0"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="3dp"
                      android:background="@drawable/preview_gradient"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/menu_shape">
        <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">
            <RelativeLayout android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/darker_gray"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/menu"
                      android:textSize="30dp"
                      android:textStyle="bold"
                      android:layout_marginTop="20dp"
                      android:gravity="center_horizontal"
                      android:id="@+id/record_list_menu_title"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/back_image_view"
                    android:src="@drawable/back"
                    android:layout_alignTop="@+id/back_image_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"/>
            <TextView
                    android:layout_marginLeft="80dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/back"
                    android:id="@+id/back_image_text"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/exitb"
                    android:scaleType="centerInside"
                    android:id="@+id/storage_close_button"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@id/back_image_view"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/close_storage"
                    android:id="@+id/storage_close_text"
                    android:layout_above="@id/back_image_text"
                    android:gravity="center_vertical"/>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Add new record"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Record name"
                    android:id="@+id/add_field_name"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Category"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView3"
                    android:textStyle="bold"/>
            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="68dp"
                        android:id="@+id/add_field_category">

                </Spinner>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="46dp"
                        android:id="@+id/add_button_add_category"
                        android:layout_gravity="center|left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/edit"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="3dp"
                        android:scaleType="centerInside"/>

            </RelativeLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Login"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView4"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Record login"
                    android:id="@+id/add_field_login"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Password"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView5"
                    android:textStyle="bold"/>
            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="68dp"
                        android:hint="Record password"
                        android:id="@+id/add_field_password"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="46dp"
                        android:id="@+id/add_button_generate_password"
                        android:layout_gravity="center|left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/generatekey"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="3dp"
                        android:scaleType="centerInside"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Description"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView6"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:lines="5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="Additional record information"
                    android:id="@+id/add_field_description"/>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/add_button_cancel"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cancel"
                        android:scaleType="centerInside"
                        />
                <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/add_button_ok"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ok"
                        android:layout_marginRight="75dp"
                        android:scaleType="centerInside"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
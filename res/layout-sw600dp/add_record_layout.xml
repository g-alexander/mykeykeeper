<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="320dp"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/add_new_record"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="@string/record_name"
                    android:id="@+id/add_field_name"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/category"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView3"
                    android:textStyle="bold"/>
            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="68dp"
                        android:id="@+id/add_field_category">

                </Spinner>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="46dp"
                        android:id="@+id/add_button_add_category"
                        android:layout_gravity="center|left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/edit"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="3dp"
                        android:scaleType="centerInside"/>

            </RelativeLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/login"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView4"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="@string/record_login"
                    android:id="@+id/add_field_login"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/password"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView5"
                    android:textStyle="bold"/>
            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="68dp"
                        android:hint="@string/record_password"
                        android:id="@+id/add_field_password"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="46dp"
                        android:id="@+id/add_button_generate_password"
                        android:layout_gravity="center|left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/generatekey"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="3dp"
                        android:scaleType="centerInside"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/description"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/textView6"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:lines="5"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:hint="@string/additional_record_information"
                    android:id="@+id/add_field_description"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="fill_parent">
        <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/menu_shape">
            <RelativeLayout android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/darker_gray"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/menu"
                      android:textSize="30dp"
                      android:textStyle="bold"
                      android:layout_marginTop="20dp"
                      android:gravity="center_horizontal"
                      android:id="@+id/add_record_menu_title"/>

            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:id="@+id/add_button_ok"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ok"
                    android:layout_marginRight="75dp"
                    android:scaleType="centerInside"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/add_record_menu_title"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_marginLeft="100dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/save_record"
                    android:id="@+id/save_record_text"
                    android:gravity="center_vertical"
                    android:layout_below="@id/add_record_menu_title"
                    android:layout_marginTop="20dp"/>

            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:id="@+id/add_button_cancel"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/cancel"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_marginLeft="100dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/cancel"
                    android:id="@+id/cancel_record_text"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>